#!/usr/bin/env bash

set -euo pipefail

context="$1"
command="$2"

SCRIPTS_PATH="$DOTFILES_PATH/scripts"
CONTEXT_PATH="$SCRIPTS_PATH/$context"
COMMAND_EXEC="$CONTEXT_PATH/$command"

if [ -z "$context" ]; then
    echo "You have to specify a context"
    exit 0
fi

if [ ! -d "$CONTEXT_PATH" ]; then 
    echo "The script context '$context' does not exist"
    exit 1
fi

if [ ! -e "$COMMAND_EXEC" ]; then 
    echo "The command '$command' does not exist"
    exit 1
fi

shift 2
source "$COMMAND_EXEC" $@

exit 0
