{
    // ---
    // Theme
    // ---
    "workbench.colorTheme": "Min Tomorrow Dark",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.iconTheme": "file-icons",
    "workbench.startupEditor": "none",
    // ---
    // Font
    // ---
    "editor.fontFamily": "'JetBrainsMono Nerd Font', feather",
    "editor.fontLigatures": true,
    // ---
    // Editor
    // ---
    "editor.renderWhitespace": "all",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    // Languages
    "[java]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.rulers": [
            100
        ],
        "editor.formatOnSave": false
        //"editor.wordWrap": "wordWrapColumn",
        //"editor.wrappingIndent": "deepIndent"
    },
    // ---
    // Format
    // ---
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // ---
    // Window
    // ---
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${appName}",
    "window.menuBarVisibility": "toggle",
    // ---
    // Ext: visualstudioexptteam.vscodeintellicode
    // ---
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // ---
    // Ext: naumovs.color-highlight
    // ---
    "color-highlight.markerType": "dot-after"
}
