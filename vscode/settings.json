{
  // Fonts
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.rulers": [
    100,
    120
  ],
  "editor.tabSize": 2,
  "editor.lineHeight": 17.4, // font-size * 1.45
  "workbench.fontAliasing": "auto",
  // macOS
  "terminal.integrated.shell.osx": "/bin/zsh",
  "window.nativeTabs": true,
  // UI
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "file-icons",
  "debug.toolBarLocation": "docked",
  "workbench.statusBar.feedback.visible": false,
  "editor.minimap.enabled": false,
  "explorer.openEditors.visible": 0,
  "editor.quickSuggestionsDelay": 0,
  // Whitespaces
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.insertFinalNewline": true,
  // Formatting
  "editor.formatOnPaste": true,
  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascript"
  },
  // ESLint
  "eslint.autoFixOnSave": false,
  "eslint.alwaysShowStatus": true,
  // Prettier
  "prettier.eslintIntegration": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  // Macros
  "macros": {
    "collapseAndClose": [
      "workbench.files.action.collapseExplorerFolders",
      "workbench.action.closeAllEditors"
    ]
  },
  // Git
  "git.autofetch": true,
  "git.detectSubmodules": false,
  // Gitlens
  "gitlens.views.compare.files.layout": "auto",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  // Pug
  "puglint.enable": true,
  "puglint.run": "onSave",
  // Specific language settings
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "files.associations": {
    "zshrc": "shellscript"
  },
  // Terminal theme: Eighties (https://glitchbone.github.io/vscode-base16-term/#/)
  "workbench.colorCustomizations": {
    "terminal.background": "#1f1f1f",
    "terminal.foreground": "#888888",
    "terminalCursor.background": "#D3D0C8",
    "terminalCursor.foreground": "#D3D0C8",
    "terminal.ansiBlack": "#1a1a1a",
    "terminal.ansiBlue": "#3e5e83",
    "terminal.ansiBrightBlack": "#1f1f1f",
    "terminal.ansiBrightBlue": "#6ea7e7",
    "terminal.ansiBrightCyan": "#77b7ff",
    "terminal.ansiBrightGreen": "#68b482",
    "terminal.ansiBrightMagenta": "#b190ef",
    "terminal.ansiBrightRed": "#f57381",
    "terminal.ansiBrightWhite": "#bbbbbb",
    "terminal.ansiBrightYellow": "#e69e69",
    "terminal.ansiCyan": "#4f7bac",
    "terminal.ansiGreen": "#6ab583",
    "terminal.ansiMagenta": "#6d5895",
    "terminal.ansiRed": "#933741",
    "terminal.ansiWhite": "#828282",
    "terminal.ansiYellow": "#9b6b46"
  },
  "terminal.integrated.fontSize": 13
}
