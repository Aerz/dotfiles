#!/usr/bin/env bash

set -e

BASE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
USER_DIR="/Users/${USER}"

#Â Git
ln -sfv "${BASE_DIR}/gitconfig" "${USER_DIR}/.gitconfig"
ln -sfv "${BASE_DIR}/gitignore_global" "${USER_DIR}/.gitignore_global"

# ZSH
ln -sfv "${BASE_DIR}/zshrc" "${USER_DIR}/.zshrc"
